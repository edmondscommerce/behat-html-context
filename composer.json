{
    "name": "edmondscommerce/behat-html-context",
    "description": "A Behat Extension for HTML",
    "keywords": [
        "Behat",
        "Testing",
        "Logging",
        "HTML",
        "Browser"
    ],
    "homepage": "https://www.edmondscommerce.co.uk",
    "license": "MIT",
    "authors": [
        {
            "name": "edmondscommerce",
            "email": "info@edmondscommerce.co.uk"
        }
    ],
    "require": {
        "behat/behat": "~3.4",
        "behat/mink": "~1.7",
        "behat/mink-extension": "~2.3"
    },
    "autoload": {
        "psr-4": {
            "EdmondsCommerce\\BehatHtmlContext\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EdmondsCommerce\\BehatHtmlContext\\": "tests/"
        }
    },
    "require-dev": {
        "edmondscommerce/phpqa": "dev-master",
        "edmondscommerce/mock-server": "dev-master@dev",
        "behat/mink-goutte-driver": "^1.2",
        "behat/mink-selenium2-driver": "^1.3",
        "edmondscommerce/selenium-server": "^1.0"
    },
    "config": {
        "bin-dir": "bin"
    }
}
